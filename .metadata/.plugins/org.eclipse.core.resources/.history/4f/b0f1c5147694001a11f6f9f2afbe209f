	(ExtensionStep)
	BEGIN
		(steps += UseCaseStep)+
		(resumeAt = DeadEndStep)? 
	END;
/*ExtensionStep:
	'Ex' (startAt = [Step]) '.' name = CHAR '.' (condition += Condition);


DeadEndStep:
	(name = INT) '.' 'Return' 'to' (resumeAt = [Step]);
